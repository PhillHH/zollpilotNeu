generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String              @id @default(uuid())
  email           String              @unique
  password_hash   String
  user_type       UserType            @default(PRIVATE)
  status          UserStatus          @default(ACTIVE)
  created_at      DateTime            @default(now())
  last_login_at   DateTime?
  memberships     Membership[]
  sessions        Session[]
  created_cases   Case[]
  credit_entries  CreditLedgerEntry[]
  events          UserEvent[]
  profile         UserProfile?
  purchases       Purchase[]

  // Content audit relations
  created_blog_posts BlogPost[] @relation("BlogPostCreatedBy")
  updated_blog_posts BlogPost[] @relation("BlogPostUpdatedBy")
  created_faq_entries FaqEntry[] @relation("FaqEntryCreatedBy")
  updated_faq_entries FaqEntry[] @relation("FaqEntryUpdatedBy")
}

// --- User Profile (für Wiederverwendung von Daten) ---

model UserProfile {
  user_id String @id

  // Persönliche Daten
  name    String?
  address String?

  // Standard-Absender
  default_sender_name    String?
  default_sender_country String?

  // Standard-Empfänger
  default_recipient_name    String?
  default_recipient_country String?

  // Häufige Länder & Währungen (optional)
  preferred_countries  Json? // Array of country codes, e.g. ["DE", "CN", "US"]
  preferred_currencies Json? // Array of currency codes, e.g. ["EUR", "USD"]

  updated_at DateTime @updatedAt

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

enum UserType {
  PRIVATE   // Privatnutzer ohne Unternehmen
  BUSINESS  // Unternehmensnutzer mit Mandant
}

enum UserStatus {
  ACTIVE    // Aktiver Nutzer
  DISABLED  // Deaktivierter Nutzer
}

model Tenant {
  id                String       @id @default(uuid())
  name              String
  type              TenantType   @default(BUSINESS)
  created_at        DateTime     @default(now())
  plan_id           String?
  plan_activated_at DateTime?
  memberships       Membership[]
  cases             Case[]
  credit_balance    TenantCreditBalance?
  credit_ledger     CreditLedgerEntry[]
  purchases         Purchase[]

  plan Plan? @relation(fields: [plan_id], references: [id])

  @@index([plan_id])
  @@index([type])
}

enum TenantType {
  BUSINESS  // Unternehmens-/Firmenmandant
}

model Membership {
  user_id   String
  tenant_id String
  role      Role

  user   User   @relation(fields: [user_id], references: [id])
  tenant Tenant @relation(fields: [tenant_id], references: [id])

  @@id([user_id, tenant_id])
}

model Session {
  id         String   @id @default(uuid())
  user_id    String
  token_hash String   @unique
  expires_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])
}

// --- User Event Historie ---

model UserEvent {
  id            String         @id @default(uuid())
  user_id       String
  type          UserEventType
  created_at    DateTime       @default(now())
  metadata_json Json?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([type])
  @@index([created_at])
}

enum UserEventType {
  REGISTERED     // Nutzer hat sich registriert
  LOGIN          // Nutzer hat sich eingeloggt
  LOGOUT         // Nutzer hat sich ausgeloggt
  PASSWORD_RESET // Passwort wurde zurückgesetzt
  STATUS_CHANGED // Status wurde geändert (active/disabled)
  PURCHASE       // Nutzer hat einen Kauf getätigt
  CREDIT_USED    // Credits wurden verwendet (z.B. PDF-Export)
  PLAN_CHANGED   // Tarif wurde geändert
}

enum Role {
  SYSTEM_ADMIN  // ZollPilot internal: full system access
  OWNER         // Tenant owner: full tenant access
  ADMIN         // Tenant admin: administrative tenant access
  EDITOR        // Content editor: blog/FAQ management only
  USER          // Standard user: limited access
}

model Case {
  id                  String      @id @default(uuid())
  tenant_id           String
  created_by_user_id  String
  title               String
  status              CaseStatus
  version             Int         @default(1)
  created_at          DateTime    @default(now())
  updated_at          DateTime    @updatedAt
  prepared_at         DateTime?   // Zeitpunkt der Vorbereitung (ersetzt submitted_at)
  completed_at        DateTime?   // Zeitpunkt der Zollanmeldung
  archived_at         DateTime?
  procedure_id        String?
  procedure_version   String?
  // DEPRECATED: submitted_at (Alias für prepared_at, wird für Migration beibehalten)
  submitted_at        DateTime?

  tenant          Tenant          @relation(fields: [tenant_id], references: [id])
  created_by      User            @relation(fields: [created_by_user_id], references: [id])
  fields          CaseField[]
  procedure       Procedure?      @relation(fields: [procedure_id], references: [id])
  snapshots       CaseSnapshot[]
  wizard_progress WizardProgress?

  @@index([tenant_id])
  @@index([procedure_id])
}

// --- Wizard Progress (generisches Wizard-System) ---

model WizardProgress {
  id              String   @id @default(uuid())
  case_id         String   @unique  // 1:1 Relation zu Case
  procedure_code  String             // IZA, IAA, IPK
  current_step    String             // Aktueller Step-Key
  completed_steps Json     @default("[]")  // Array von Step-Keys
  is_completed    Boolean  @default(false)
  created_at      DateTime @default(now())
  updated_at      DateTime @updatedAt

  case Case @relation(fields: [case_id], references: [id], onDelete: Cascade)

  @@index([case_id])
  @@index([procedure_code])
}

model CaseField {
  id         String   @id @default(uuid())
  case_id    String
  key        String
  value_json Json
  value_text String?
  updated_at DateTime @updatedAt

  case Case @relation(fields: [case_id], references: [id], onDelete: Cascade)

  @@unique([case_id, key])
  @@index([case_id])
  @@index([key])
}

enum CaseStatus {
  DRAFT       // Fall angelegt, kein Verfahren gestartet
  IN_PROCESS  // Verfahren gewählt, Bearbeitung läuft
  PREPARED    // Vorbereitung abgeschlossen, bereit für Zollanmeldung
  COMPLETED   // Zollanmeldung beim Zoll eingereicht
  ARCHIVED    // Fall abgelegt
  // DEPRECATED: SUBMITTED (migriert zu PREPARED)
}

model CaseSnapshot {
  id                String   @id @default(uuid())
  case_id           String
  version           Int
  procedure_code    String
  procedure_version String
  fields_json       Json
  validation_json   Json
  created_at        DateTime @default(now())

  case Case @relation(fields: [case_id], references: [id], onDelete: Cascade)

  @@unique([case_id, version])
  @@index([case_id])
}

// --- Procedure Models ---

model Procedure {
  id         String          @id @default(uuid())
  code       String
  name       String
  version    String          @default("v1")
  is_active  Boolean         @default(true)
  created_at DateTime        @default(now())
  updated_at DateTime        @updatedAt
  steps      ProcedureStep[]
  cases      Case[]

  @@unique([code, version])
  @@index([code])
}

model ProcedureStep {
  id           String           @id @default(uuid())
  procedure_id String
  step_key     String
  title        String
  order        Int
  is_active    Boolean          @default(true)
  fields       ProcedureField[]

  procedure Procedure @relation(fields: [procedure_id], references: [id], onDelete: Cascade)

  @@unique([procedure_id, step_key])
  @@index([procedure_id])
}

model ProcedureField {
  id                String        @id @default(uuid())
  procedure_step_id String
  field_key         String
  field_type        FieldType
  required          Boolean       @default(false)
  config_json       Json?
  order             Int

  step ProcedureStep @relation(fields: [procedure_step_id], references: [id], onDelete: Cascade)

  @@unique([procedure_step_id, field_key])
  @@index([procedure_step_id])
}

enum FieldType {
  TEXT
  NUMBER
  SELECT
  COUNTRY
  CURRENCY
  BOOLEAN
}

// --- Billing Models ---

model Plan {
  id                 String          @id @default(uuid())
  code               String          @unique
  name               String
  is_active          Boolean         @default(true)
  price_cents        Int?
  currency           String          @default("EUR")
  interval           PlanInterval    @default(NONE)
  credits_included   Int             @default(0)
  allowed_procedures ProcedureCode[] @default([])
  created_at         DateTime        @default(now())
  updated_at         DateTime        @updatedAt
  tenants            Tenant[]
}

enum PlanInterval {
  ONE_TIME
  YEARLY
  MONTHLY
  NONE
}

enum ProcedureCode {
  IZA  // Individuelle Zollanmeldung
  IAA  // Import-/Ausfuhrabfertigung
  IPK  // Importkontrolle
}

model TenantCreditBalance {
  tenant_id  String   @id
  balance    Int      @default(0)
  updated_at DateTime @updatedAt

  tenant Tenant @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
}

model CreditLedgerEntry {
  id                 String   @id @default(uuid())
  tenant_id          String
  delta              Int
  reason             String
  metadata_json      Json?
  created_by_user_id String?
  created_at         DateTime @default(now())

  tenant     Tenant @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  created_by User?  @relation(fields: [created_by_user_id], references: [id])

  @@index([tenant_id])
  @@index([created_at])
}

// ============================================================================
// Payments (Sprint 7 – U6)
// ============================================================================

/// Payment provider enum
enum PaymentProvider {
  STRIPE
}

/// Purchase type enum
enum PurchaseType {
  CREDITS    // Credit pack purchase
  IZA_PASS   // IZA Pass (one-time)
}

/// Purchase status enum
enum PurchaseStatus {
  PENDING    // Checkout session created, awaiting payment
  PAID       // Payment confirmed
  FAILED     // Payment failed or expired
  REFUNDED   // Payment refunded
}

/// Purchase record for tracking payments
model Purchase {
  id              String          @id @default(uuid())
  tenant_id       String
  user_id         String
  provider        PaymentProvider @default(STRIPE)
  provider_ref    String          // Stripe checkout session ID or payment intent ID
  type            PurchaseType
  amount_cents    Int             // Price in cents
  currency        String          @default("EUR")
  credits_amount  Int?            // Number of credits (for CREDITS type)
  status          PurchaseStatus  @default(PENDING)
  metadata_json   Json?           // Additional data (product name, etc.)
  created_at      DateTime        @default(now())
  updated_at      DateTime        @updatedAt
  paid_at         DateTime?       // When payment was confirmed

  tenant Tenant @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [user_id], references: [id])

  @@unique([provider, provider_ref])  // Ensure idempotency
  @@index([tenant_id])
  @@index([user_id])
  @@index([status])
  @@index([created_at])
}

// --- Content Models (Blog & FAQ) ---

model BlogPost {
  id           String        @id @default(uuid())
  title        String
  slug         String        @unique
  excerpt      String
  content      String        // MDX-ready content
  status       ContentStatus @default(DRAFT)
  published_at DateTime?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt

  // SEO fields
  meta_title       String?
  meta_description String?

  // Audit fields
  created_by_user_id String?
  updated_by_user_id String?
  created_by         User?     @relation("BlogPostCreatedBy", fields: [created_by_user_id], references: [id], onDelete: SetNull)
  updated_by         User?     @relation("BlogPostUpdatedBy", fields: [updated_by_user_id], references: [id], onDelete: SetNull)

  // Relations
  faq_entries FaqEntry[]

  @@index([status])
  @@index([published_at])
  @@index([slug])
}

model FaqEntry {
  id           String        @id @default(uuid())
  question     String
  answer       String        // MDX-ready content
  category     String        @default("Allgemein")
  order_index  Int           @default(0)
  status       ContentStatus @default(DRAFT)
  published_at DateTime?
  created_at   DateTime      @default(now())
  updated_at   DateTime      @updatedAt

  // Optional relation to BlogPost for "read more"
  related_blog_post_id String?
  related_blog_post    BlogPost? @relation(fields: [related_blog_post_id], references: [id], onDelete: SetNull)

  // Audit fields
  created_by_user_id String?
  updated_by_user_id String?
  created_by         User?     @relation("FaqEntryCreatedBy", fields: [created_by_user_id], references: [id], onDelete: SetNull)
  updated_by         User?     @relation("FaqEntryUpdatedBy", fields: [updated_by_user_id], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([category])
  @@index([order_index])
}

enum ContentStatus {
  DRAFT
  PUBLISHED
}

// ============================================================================
// Knowledge Base (Sprint 6C – C6)
// ============================================================================

/// Procedure types for knowledge entries
enum ProcedureType {
  IZA   // Internet-Zollanmeldung (Privatpersonen)
  IPK   // Import-Paketverkehr
  IAA   // Internet-Ausfuhranmeldung
  ALL   // Applies to all procedures
}

/// Knowledge topic for grouping entries
model KnowledgeTopic {
  id          String   @id @default(uuid())
  code        String   @unique  // e.g., "zollwert", "warennummer"
  name        String             // e.g., "Zollwert", "Warennummer"
  description String?            // Short description of the topic
  order_index Int      @default(0)
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  // Relations
  entries KnowledgeEntry[]

  @@index([code])
  @@index([order_index])
}

/// Knowledge entry with explanation content
model KnowledgeEntry {
  id             String        @id @default(uuid())
  title          String                  // e.g., "Was ist der Zollwert?"
  summary        String                  // Short summary (1-2 sentences)
  explanation    String                  // Full explanation in Markdown
  applies_to     ProcedureType @default(ALL)  // Which procedure this applies to
  related_fields String[]      @default([])   // Related form fields (e.g., ["zollwert", "versandkosten"])
  version        Int           @default(1)
  status         ContentStatus @default(DRAFT)
  created_at     DateTime      @default(now())
  updated_at     DateTime      @updatedAt

  // Topic relation
  topic_id String?
  topic    KnowledgeTopic? @relation(fields: [topic_id], references: [id], onDelete: SetNull)

  @@index([status])
  @@index([applies_to])
  @@index([topic_id])
}


