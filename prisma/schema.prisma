generator client {
  provider = "prisma-client-py"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id              String              @id @default(uuid())
  email           String              @unique
  password_hash   String
  user_type       UserType            @default(PRIVATE)
  status          UserStatus          @default(ACTIVE)
  created_at      DateTime            @default(now())
  last_login_at   DateTime?
  memberships     Membership[]
  sessions        Session[]
  created_cases   Case[]
  credit_entries  CreditLedgerEntry[]
  events          UserEvent[]
}

enum UserType {
  PRIVATE   // Privatnutzer ohne Unternehmen
  BUSINESS  // Unternehmensnutzer mit Mandant
}

enum UserStatus {
  ACTIVE    // Aktiver Nutzer
  DISABLED  // Deaktivierter Nutzer
}

model Tenant {
  id                String       @id @default(uuid())
  name              String
  type              TenantType   @default(BUSINESS)
  created_at        DateTime     @default(now())
  plan_id           String?
  plan_activated_at DateTime?
  memberships       Membership[]
  cases             Case[]
  credit_balance    TenantCreditBalance?
  credit_ledger     CreditLedgerEntry[]

  plan Plan? @relation(fields: [plan_id], references: [id])

  @@index([plan_id])
  @@index([type])
}

enum TenantType {
  BUSINESS  // Unternehmens-/Firmenmandant
}

model Membership {
  user_id   String
  tenant_id String
  role      Role

  user   User   @relation(fields: [user_id], references: [id])
  tenant Tenant @relation(fields: [tenant_id], references: [id])

  @@id([user_id, tenant_id])
}

model Session {
  id         String   @id @default(uuid())
  user_id    String
  token_hash String   @unique
  expires_at DateTime
  created_at DateTime @default(now())

  user User @relation(fields: [user_id], references: [id])
}

// --- User Event Historie ---

model UserEvent {
  id            String         @id @default(uuid())
  user_id       String
  type          UserEventType
  created_at    DateTime       @default(now())
  metadata_json Json?

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)

  @@index([user_id])
  @@index([type])
  @@index([created_at])
}

enum UserEventType {
  REGISTERED     // Nutzer hat sich registriert
  LOGIN          // Nutzer hat sich eingeloggt
  LOGOUT         // Nutzer hat sich ausgeloggt
  PASSWORD_RESET // Passwort wurde zur체ckgesetzt
  STATUS_CHANGED // Status wurde ge채ndert (active/disabled)
  PURCHASE       // Nutzer hat einen Kauf get채tigt
  CREDIT_USED    // Credits wurden verwendet (z.B. PDF-Export)
  PLAN_CHANGED   // Tarif wurde ge채ndert
}

enum Role {
  SYSTEM_ADMIN  // ZollPilot internal: full system access
  OWNER         // Tenant owner: full tenant access
  ADMIN         // Tenant admin: administrative tenant access
  USER          // Standard user: limited access
}

model Case {
  id                  String      @id @default(uuid())
  tenant_id           String
  created_by_user_id  String
  title               String
  status              CaseStatus
  version             Int         @default(1)
  created_at          DateTime    @default(now())
  updated_at          DateTime    @updatedAt
  submitted_at        DateTime?
  archived_at         DateTime?
  procedure_id        String?
  procedure_version   String?

  tenant     Tenant         @relation(fields: [tenant_id], references: [id])
  created_by User           @relation(fields: [created_by_user_id], references: [id])
  fields     CaseField[]
  procedure  Procedure?     @relation(fields: [procedure_id], references: [id])
  snapshots  CaseSnapshot[]

  @@index([tenant_id])
  @@index([procedure_id])
}

model CaseField {
  id         String   @id @default(uuid())
  case_id    String
  key        String
  value_json Json
  value_text String?
  updated_at DateTime @updatedAt

  case Case @relation(fields: [case_id], references: [id], onDelete: Cascade)

  @@unique([case_id, key])
  @@index([case_id])
  @@index([key])
}

enum CaseStatus {
  DRAFT
  SUBMITTED
  ARCHIVED
}

model CaseSnapshot {
  id                String   @id @default(uuid())
  case_id           String
  version           Int
  procedure_code    String
  procedure_version String
  fields_json       Json
  validation_json   Json
  created_at        DateTime @default(now())

  case Case @relation(fields: [case_id], references: [id], onDelete: Cascade)

  @@unique([case_id, version])
  @@index([case_id])
}

// --- Procedure Models ---

model Procedure {
  id         String          @id @default(uuid())
  code       String
  name       String
  version    String          @default("v1")
  is_active  Boolean         @default(true)
  created_at DateTime        @default(now())
  updated_at DateTime        @updatedAt
  steps      ProcedureStep[]
  cases      Case[]

  @@unique([code, version])
  @@index([code])
}

model ProcedureStep {
  id           String           @id @default(uuid())
  procedure_id String
  step_key     String
  title        String
  order        Int
  is_active    Boolean          @default(true)
  fields       ProcedureField[]

  procedure Procedure @relation(fields: [procedure_id], references: [id], onDelete: Cascade)

  @@unique([procedure_id, step_key])
  @@index([procedure_id])
}

model ProcedureField {
  id                String        @id @default(uuid())
  procedure_step_id String
  field_key         String
  field_type        FieldType
  required          Boolean       @default(false)
  config_json       Json?
  order             Int

  step ProcedureStep @relation(fields: [procedure_step_id], references: [id], onDelete: Cascade)

  @@unique([procedure_step_id, field_key])
  @@index([procedure_step_id])
}

enum FieldType {
  TEXT
  NUMBER
  SELECT
  COUNTRY
  CURRENCY
  BOOLEAN
}

// --- Billing Models ---

model Plan {
  id                 String          @id @default(uuid())
  code               String          @unique
  name               String
  is_active          Boolean         @default(true)
  price_cents        Int?
  currency           String          @default("EUR")
  interval           PlanInterval    @default(NONE)
  credits_included   Int             @default(0)
  allowed_procedures ProcedureCode[] @default([])
  created_at         DateTime        @default(now())
  updated_at         DateTime        @updatedAt
  tenants            Tenant[]
}

enum PlanInterval {
  ONE_TIME
  YEARLY
  MONTHLY
  NONE
}

enum ProcedureCode {
  IZA  // Individuelle Zollanmeldung
  IAA  // Import-/Ausfuhrabfertigung
  IPK  // Importkontrolle
}

model TenantCreditBalance {
  tenant_id  String   @id
  balance    Int      @default(0)
  updated_at DateTime @updatedAt

  tenant Tenant @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
}

model CreditLedgerEntry {
  id                 String   @id @default(uuid())
  tenant_id          String
  delta              Int
  reason             String
  metadata_json      Json?
  created_by_user_id String?
  created_at         DateTime @default(now())

  tenant     Tenant @relation(fields: [tenant_id], references: [id], onDelete: Cascade)
  created_by User?  @relation(fields: [created_by_user_id], references: [id])

  @@index([tenant_id])
  @@index([created_at])
}

